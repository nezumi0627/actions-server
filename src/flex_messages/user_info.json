{
    "type": "bubble",
    "body": {
        "type": "box",
        "layout": "vertical",
        "contents": [
            {
                "type": "image",
                "url": "{original_photo_url}",
                "size": "full",
                "aspectMode": "cover",
                "aspectRatio": "1:1",
                "gravity": "center"
            },
            {
                "type": "box",
                "layout": "vertical",
                "contents": [
                    {
                        "type": "text",
                        "text": "ユーザー情報",
                        "weight": "bold",
                        "size": "xl",
                        "color": "#1DB446",
                        "margin": "md"
                    },
                    {
                        "type": "separator",
                        "margin": "md"
                    },
                    {
                        "type": "box",
                        "layout": "vertical",
                        "contents": [
                            {
                                "type": "text",
                                "text": "表示名",
                                "color": "#666666",
                                "size": "sm"
                            },
                            {
                                "type": "box",
                                "layout": "horizontal",
                                "contents": [
                                    {
                                        "type": "text",
                                        "text": "{display_name}",
                                        "weight": "bold",
                                        "size": "md",
                                        "margin": "sm"
                                    },
                                    {
                                        "type": "text",
                                        "text": "※表示名は更新されていない場合があります",
                                        "color": "#999999",
                                        "size": "xs",
                                        "margin": "sm",
                                        "align": "end",
                                        "wrap": true
                                    }
                                ],
                                "margin": "md"
                            }
                        ],
                        "margin": "md"
                    },
                    {
                        "type": "box",
                        "layout": "vertical",
                        "contents": [
                            {
                                "type": "text",
                                "text": "ユーザーID",
                                "color": "#666666",
                                "size": "sm"
                            },
                            {
                                "type": "text",
                                "text": "{user_id}",
                                "weight": "bold",
                                "size": "md",
                                "margin": "sm"
                            }
                        ],
                        "margin": "md"
                    },
                    {
                        "type": "box",
                        "layout": "vertical",
                        "contents": [
                            {
                                "type": "text",
                                "text": "サービスタイプ",
                                "color": "#666666",
                                "size": "sm"
                            },
                            {
                                "type": "text",
                                "text": "{service_type}",
                                "weight": "bold",
                                "size": "md",
                                "margin": "sm"
                            }
                        ],
                        "margin": "md"
                    },
                    {
                        "type": "box",
                        "layout": "vertical",
                        "contents": [
                            {
                                "type": "text",
                                "text": "プライベート連絡先番号",
                                "color": "#666666",
                                "size": "sm"
                            },
                            {
                                "type": "box",
                                "layout": "horizontal",
                                "contents": [
                                    {
                                        "type": "text",
                                        "text": "{private_contact_no}",
                                        "weight": "bold",
                                        "size": "md",
                                        "margin": "sm"
                                    },
                                    {
                                        "type": "text",
                                        "text": "（アカウント追加済の場合のみ）",
                                        "color": "#999999",
                                        "size": "xs",
                                        "margin": "sm",
                                        "align": "end",
                                        "wrap": true
                                    }
                                ],
                                "margin": "md"
                            }
                        ],
                        "margin": "md"
                    }
                ],
                "paddingAll": "15px"
            }
        ],
        "paddingAll": "0px"
    }
}
